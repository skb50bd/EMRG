@page
@model Web.Areas.DepartmentAdmin.Pages.Sections.CreateModel
@using static System.DayOfWeek
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Section</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Section.Number" class="control-label"></label>
                <input asp-for="Section.Number" class="form-control" />
                <span asp-validation-for="Section.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Section.Semester" class="control-label"></label>
                <select asp-for="Section.SemesterId" class="form-control" asp-items="ViewBag.SemesterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Section.Room" class="control-label"></label>
                <select asp-for="Section.RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Section.Faculty" class="control-label"></label>
                <select asp-for="Section.FacultyId" class="form-control" asp-items="ViewBag.FacultyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Section.Course" class="control-label"></label>
                <select asp-for="Section.CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
            </div>

            <div class="form-group">
                <label asp-for="Section.Schedule" class="control-label"></label>
                <div class="row">
                    <div class="col">
                        <select asp-for="Section.Schedule.TimeSlots[0].DayOfWeek"
                                class="form-control">
                            <option value="" selected disabled>Select Weekday</option>
                            <option value="@Sunday">Sunday</option>
                            <option value="@Monday">Monday</option>
                            <option value="@Tuesday">Tuesday</option>
                            <option value="@Wednesday">Wednesday</option>
                            <option value="@Thursday">Thursday</option>
                            <option value="@Friday">Friday</option>
                            <option value="@Saturday">Saturday</option>
                        </select>
                        <span asp-validation-for="Section.Schedule.TimeSlots[0].DayOfWeek" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <select asp-for="Section.Schedule.TimeSlots[0].StartTime"
                                class="form-control">
                            <option value="" selected disabled>Select Start Time</option>
                            <option value="08:30">08:30</option>
                            <option value="10:10">10:10</option>
                            <option value="11:50">11:50</option>
                            <option value="13:30">13:30</option>
                            <option value="15:10">15:10</option>
                        </select>
                        <span asp-validation-for="Section.Schedule.TimeSlots[0].StartTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col">
                        <select asp-for="Section.Schedule.TimeSlots[1].DayOfWeek"
                                class="form-control">
                            <option value="" selected disabled>Select Weekday</option>
                            <option value="@Sunday">Sunday</option>
                            <option value="@Monday">Monday</option>
                            <option value="@Tuesday">Tuesday</option>
                            <option value="@Wednesday">Wednesday</option>
                            <option value="@Thursday">Thursday</option>
                            <option value="@Friday">Friday</option>
                            <option value="@Saturday">Saturday</option>
                        </select>
                        <span asp-validation-for="Section.Schedule.TimeSlots[1].DayOfWeek" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <select asp-for="Section.Schedule.TimeSlots[1].StartTime"
                                class="form-control">
                            <option value="" selected disabled>Select Start Time</option>
                            <option value="08:30">08:30</option>
                            <option value="10:10">10:10</option>
                            <option value="11:50">11:50</option>
                            <option value="13:30">13:30</option>
                            <option value="15:10">15:10</option>
                        </select>
                        <span asp-validation-for="Section.Schedule.TimeSlots[1].StartTime" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
