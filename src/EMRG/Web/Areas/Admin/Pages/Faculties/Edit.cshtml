@page
@model Web.Pages.Faculties.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Faculty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_PersonCreatePartial" for="Faculty" />
            <div class="form-group">
                <label asp-for="Faculty.Initial" class="control-label"></label>
                <input asp-for="Faculty.Initial" class="form-control" />
                <span asp-validation-for="Faculty.Initial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Faculty.Designation" class="control-label"></label>
                <input asp-for="Faculty.Designation" class="form-control" />
                <span asp-validation-for="Faculty.Designation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Faculty.DepartmentId" class="control-label"></label>
                <select asp-for="Faculty.DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                <span asp-validation-for="Faculty.DepartmentId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Faculty.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
        @if(ViewBag.Message != null)
        {
            <script ="text/javascript">
                window.onload = function () {
                    alert("@ViewBag.Message")
                }
            </script>
        }
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
