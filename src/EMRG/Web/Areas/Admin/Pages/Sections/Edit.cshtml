@page
@model Web.Areas.Admin.Pages.Sections.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Section</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Section.Number" class="control-label"></label>
                <input asp-for="Section.Number" class="form-control" />
                <span asp-validation-for="Section.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Section.SemesterId" class="control-label"></label>
                <select asp-for="Section.SemesterId" class="form-control" asp-items="ViewBag.SemesterId"></select>
                <span asp-validation-for="Section.SemesterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Section.RoomId" class="control-label"></label>
                <select asp-for="Section.RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
                <span asp-validation-for="Section.RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Section.FacultyId" class="control-label"></label>
                <select asp-for="Section.FacultyId" class="form-control" asp-items="ViewBag.FacultyId"></select>
                <span asp-validation-for="Section.FacultyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Section.CourseId" class="control-label"></label>
                <select asp-for="Section.CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
                <span asp-validation-for="Section.CourseId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Section.IsRemoved" /> @Html.DisplayNameFor(model => model.Section.IsRemoved)
                </label>
            </div>
            <input type="hidden" asp-for="Section.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
